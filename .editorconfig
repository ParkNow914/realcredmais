root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# Em Markdown, espaços à direita podem ser quebras de linha
trim_trailing_whitespace = false

# Scripts Windows
[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf

[*.ps1]
end_of_line = crlf

# Scripts Unix
[*.sh]
end_of_line = lf

# Linguagens e formatos comuns no projeto
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2
