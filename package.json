{
  "name": "realcredmais",
  "version": "1.0.0",
  "description": "Sistema de simulação de empréstimo consignado",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "frontend:dev": "vite --host --port 3000",
    "frontend:build": "vite build",
    "prebuild": "node scripts/copy-assets.js",
    "build": "vite build",
    "postbuild": "node scripts/fix-paths.js && node inline-critical.js",
    "images:webp": "node convert-to-webp.js",
    "deploy": "npm run build && npx wrangler pages deploy dist",
    "dev:all": "concurrently -n 'backend,frontend' -c 'bgBlue.bold,bgGreen.bold' \"npm run dev\" \"npm run frontend:dev\"",
    "start:all": "npm run build && npm start",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,jsx,json,html,css}\"",
    "test": "jest",
    "prepare": "[ -f .git/hooks/pre-commit ] || npx husky install",
    "build:production": "npm install --production=false && npm run build",
    "postinstall": "npx husky install"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "critters": "^0.0.18",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.2.0",
    "helmet-csp": "^4.0.0",
    "nodemailer": "^6.9.8",
    "openssl-wrapper": "^0.3.4",
    "pem": "^1.14.8",
    "vanilla-masker": "^1.2.0",
    "vite": "^5.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "@types/nodemailer": "^6.4.17",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "fs-extra": "^11.3.0",
    "https": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sharp": "^0.33.0"
  }
}
