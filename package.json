{
  "name": "realcred-backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend:dev": "vite --host",
    "frontend:build": "npm install -g vite && vite build",
    "build": "npm install && npm install -g vite && vite build",
    "images:webp": "node convert-to-webp.js",
    "postbuild": "node inline-critical.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run frontend:dev\"",
    "start:all": "concurrently \"npm start\" \"npm run frontend:build\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.0",
    "helmet": "^7.2.0",
    "helmet-csp": "^4.0.0",
    "nodemailer": "^6.9.8",
    "openssl-wrapper": "^0.3.4",
    "pem": "^1.14.8",
    "vanilla-masker": "^1.2.0",
    "vite": "^5.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "critters": "^0.0.18",
    "https": "^1.0.0",
    "nodemon": "^3.1.10",
    "sharp": "^0.33.0"
  }
}
